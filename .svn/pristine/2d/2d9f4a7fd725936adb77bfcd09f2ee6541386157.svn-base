<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusableInTouchMode="true"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <TextView
        android:id="@+id/listTitle_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="25dp"
        android:paddingEnd="15dp"
        android:paddingLeft="15dp"
        android:paddingStart="15dp"
        android:paddingTop="25dp"
        android:background="@drawable/horizontal_divider_dedede"
        android:textColor="@color/color_1976D2"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_my_issues_open"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:listitem="@layout/fragment_my_issues_item" />

    <TextView
        android:id="@+id/listTitle_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="25dp"
        android:paddingEnd="15dp"
        android:paddingLeft="15dp"
        android:paddingStart="15dp"
        android:paddingTop="25dp"
        android:background="@drawable/horizontal_divider_dedede"
        android:textColor="@color/color_1976D2"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_my_issues_close"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:listitem="@layout/fragment_my_issues_item" />

</LinearLayout>