<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/forPaymentFrameImage"
                    android:layout_width="match_parent"
                    android:layout_height="225dp"
                    android:background="@color/color_E4E4E4"
                    android:gravity="center|center_vertical"
                    android:minHeight="200dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center|center_vertical"
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="0dp"
                        android:contentDescription="@null"
                        android:padding="0dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/profile_image_bgd" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:paddingEnd="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingStart="15dp">

                    <TextView
                        android:id="@+id/profileLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/color_1976D2"
                        android:textSize="18sp" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edtFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:enabled="false"
                        android:hint="@string/string_first_name"
                        android:inputType="textPersonName|textNoSuggestions"
                        android:textSize="16sp"
                        app:met_baseColor="@color/colorProductDetail"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelTextColor="@color/colorShoppingCartTotal"
                        app:met_floatingLabelTextSize="14sp"
                        app:met_primaryColor="@color/colorShoppingCartTotal"
                        app:met_textColor="@color/color_333333"
                        app:met_typeface="fonts/ElliotSans-Regular.ttf" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edtLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:enabled="false"
                        android:hint="@string/string_last_name"
                        android:inputType="textPersonName|textNoSuggestions"
                        android:textSize="16sp"
                        app:met_baseColor="@color/colorProductDetail"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelTextColor="@color/colorShoppingCartTotal"
                        app:met_floatingLabelTextSize="14sp"
                        app:met_primaryColor="@color/colorShoppingCartTotal"
                        app:met_textColor="@color/color_333333"
                        app:met_typeface="fonts/ElliotSans-Regular.ttf" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edtCountry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:enabled="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/string_country"
                        android:inputType="textPersonName|textNoSuggestions"
                        android:textSize="16sp"
                        app:met_baseColor="@color/colorProductDetail"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelTextColor="@color/colorShoppingCartTotal"
                        app:met_floatingLabelTextSize="14sp"
                        app:met_primaryColor="@color/colorShoppingCartTotal"
                        app:met_textColor="@color/color_333333"
                        app:met_typeface="fonts/ElliotSans-Regular.ttf" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edtEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:enabled="false"
                        android:hint="@string/string_email_address"
                        android:inputType="textEmailAddress|textNoSuggestions"
                        android:textSize="16sp"
                        app:met_baseColor="@color/colorProductDetail"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelTextColor="@color/colorShoppingCartTotal"
                        app:met_floatingLabelTextSize="14sp"
                        app:met_primaryColor="@color/colorShoppingCartTotal"
                        app:met_textColor="@color/color_333333"
                        app:met_typeface="fonts/ElliotSans-Regular.ttf" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/countryCode"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="0.2"
                            android:gravity="center_vertical"
                            android:textSize="16sp" />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/edtMobileNumber"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:hint="@string/string_mobile_number"
                            android:inputType="phone|textNoSuggestions"
                            android:textSize="16sp"
                            app:met_baseColor="@color/colorProductDetail"
                            app:met_floatingLabel="normal"
                            app:met_floatingLabelPadding="5dp"
                            app:met_floatingLabelTextColor="@color/colorShoppingCartTotal"
                            app:met_helperText="Mobile number without country code"
                            app:met_helperTextAlwaysShown="true"
                            app:met_helperTextColor="@color/colorShoppingCartTotal"
                            app:met_hideUnderline="false"
                            app:met_primaryColor="@color/colorShoppingCartTotal"
                            app:met_textColor="@color/color_333333"
                            app:met_typeface="fonts/ElliotSans-Regular.ttf" />

                    </LinearLayout>

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edtBirthDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:enabled="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/string_birth_date"
                        android:textSize="16sp"
                        app:met_baseColor="@color/colorProductDetail"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelTextColor="@color/colorShoppingCartTotal"
                        app:met_floatingLabelTextSize="14sp"
                        app:met_primaryColor="@color/colorShoppingCartTotal"
                        app:met_textColor="@color/color_333333"
                        app:met_typeface="fonts/ElliotSans-Regular.ttf" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edtGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:enabled="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/string_gender"
                        android:inputType="textPersonName|textNoSuggestions"
                        android:textSize="16sp"
                        app:met_baseColor="@color/colorProductDetail"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelTextColor="@color/colorShoppingCartTotal"
                        app:met_floatingLabelTextSize="14sp"
                        app:met_primaryColor="@color/colorShoppingCartTotal"
                        app:met_textColor="@color/color_333333"
                        app:met_typeface="fonts/ElliotSans-Regular.ttf" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edtOccupation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:enabled="false"
                        android:hint="@string/string_occupation"
                        android:inputType="textPersonName|textNoSuggestions"
                        android:textSize="16sp"
                        app:met_baseColor="@color/colorProductDetail"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelTextColor="@color/colorShoppingCartTotal"
                        app:met_floatingLabelTextSize="14sp"
                        app:met_primaryColor="@color/colorShoppingCartTotal"
                        app:met_textColor="@color/color_333333"
                        app:met_typeface="fonts/ElliotSans-Regular.ttf" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>

