<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:paddingEnd="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingStart="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:focusableInTouchMode="false"
            android:hint="@string/string_country"
            android:inputType="textPersonName|textNoSuggestions"
            android:textSize="16sp"
            app:met_baseColor="@color/colorProductDetail"
            app:met_floatingLabel="normal"
            app:met_floatingLabelTextColor="@color/colorShoppingCartTotal"
            app:met_floatingLabelTextSize="14sp"
            app:met_primaryColor="@color/colorShoppingCartTotal"
            app:met_textColor="@color/color_333333"
            app:met_typeface="fonts/ElliotSans-Regular.ttf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/countryCode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.2"
                android:gravity="center_vertical"
                android:textSize="16sp" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/txv_enter_mobile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:hint="@string/string_enter_phone_number"
                android:inputType="phone"
                android:textSize="16sp"
                app:met_baseColor="@color/colorProductDetail"
                app:met_floatingLabel="normal"
                app:met_floatingLabelPadding="5dp"
                app:met_floatingLabelTextColor="@color/colorShoppingCartTotal"
                app:met_helperText="Mobile number without country code"
                app:met_helperTextAlwaysShown="true"
                app:met_helperTextColor="@color/colorShoppingCartTotal"
                app:met_hideUnderline="false"
                app:met_primaryColor="@color/colorShoppingCartTotal"
                app:met_textColor="@color/color_333333"
                app:met_typeface="fonts/ElliotSans-Regular.ttf" />

        </LinearLayout>

        <Button
            android:id="@+id/btnContinue"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_login"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txv_code_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical|center"
            android:maxLines="2"
            android:text="sample text here"
            android:textColor="@color/color_989898"
            android:textSize="14sp" />

