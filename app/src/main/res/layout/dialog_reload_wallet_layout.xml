<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/txv_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:text="Choose Reload Options" />

        <Button
            android:textColor="@color/whitePrimary"
            android:id="@+id/btn_relaod_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txv_caption"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_bg_blue"
            android:text="Reload thru Bank" />

        <Button
            android:textColor="@color/whitePrimary"
            android:id="@+id/btn_relaod_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_relaod_bank"
            android:background="@drawable/button_bg_red"
            android:text="Reload thru Card" />


    </RelativeLayout>
</RelativeLayout>