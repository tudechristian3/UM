<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="@color/colorWhite"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/bg_border">

        <ImageView
            android:id="@+id/my_order_details_item_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:gravity="center_vertical"
            android:maxHeight="100dp"
            android:padding="3dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingEnd="0dp"
        android:paddingLeft="15dp"
        android:paddingRight="0dp"
        android:paddingStart="15dp">

        <Button
            android:id="@+id/btnCancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:background="@color/colorWhite"
            android:gravity="end|center_vertical"
            android:text="Cancel"
            android:textColor="@color/colorTxtProductAmount"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_order_details_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="start|center_vertical"
            android:textColor="@color/colorShoppingCartTotal"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/my_order_details_item_quantity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp" />

            <!--<TextView-->
            <!--android:id="@+id/my_order_details_item_amount"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:maxLines="2"-->
            <!--android:textColor="@color/colorShoppingCartTotal"-->
            <!--android:textSize="14sp" />-->

        </LinearLayout>

    </LinearLayout>

</LinearLayout>