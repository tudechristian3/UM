<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingStart="15dp">

        <TextView
            android:id="@+id/schedulelabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/color_1976D2"
            android:textSize="18sp" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/scheduledate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:enabled="true"
            android:focusableInTouchMode="false"
            android:hint="@string/string_schedule_date"
            android:inputType="textPersonName|textNoSuggestions"
            android:textSize="16sp"
            app:met_baseColor="@color/colorProductDetail"
            app:met_floatingLabel="normal"
            app:met_floatingLabelTextColor="@color/colorShoppingCartTotal"
            app:met_floatingLabelTextSize="14sp"
            app:met_primaryColor="@color/colorShoppingCartTotal"
            app:met_textColor="@color/color_333333"
            app:met_typeface="fonts/ElliotSans-Regular.ttf" />

        <TextView
            android:id="@+id/scheduleDeliver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/color_1976D2"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/vehicle_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp" />

        <TextView
            android:id="@+id/labeldeliverycharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/color_212121"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/labeldelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/color_212121"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/color_212121"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/instructions"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/box_halo"
            android:focusable="true"
            android:gravity="top|start"
            android:inputType="textMultiLine|textNoSuggestions"
            android:lines="8"
            android:maxLength="50"
            android:maxLines="10"
            android:minLines="6"
            android:padding="10dp"
            android:scrollbars="vertical"
            android:textColor="@color/color_333333" />

    </LinearLayout>

</LinearLayout>